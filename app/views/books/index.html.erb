<%= render 'list', book: @book %>

 <h1>Books</h1>
<% @books.each do |book| %>
    <%= image_tag book_path(book.id) do %>
      <%= image_tag book.get_image %>
    <% end %>

      <table>

        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
          </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= image_tag book.user.get_profile_image(100,100) %></td>
          <td><%= link_to "book.title", user_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      </tbody>

      </table>
  </div>
<% end %>



