<%= render 'list', book: @book %>

 <h1>Books</h1>
<% @books.each do |book| %>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
      </thead>
      
          <%= image_tag book_path(book.id) do %>
            <%= image_tag @books.get_image %>
          <% end %>
      <tbody>
        <tr>
          <td><%= image_tag book.user.get_profile_image(100,100) %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      </tbody>

      </table>
  </div>
<% end %>



