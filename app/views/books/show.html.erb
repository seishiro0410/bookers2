<%= render 'books/list', book: @book %>


<h1>Book detail</h1>

      <table>
        <thead>
          <tr>
            <td><%= image_tag @user.get_profile_image(100,100) %></td>
            <td><%= @books.title %></td>
            <td><%= @books.body %></td>
            <td><%= link_to "Edit", edit_book_path(@books.id) %></td>
            <td><%= link_to "Destroy", book_path(@books.id), method: :delete, "date-confirm" => "Are you sure?" %></td>
          </tr>
        </thead>
      </table>