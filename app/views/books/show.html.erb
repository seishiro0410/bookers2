


<h1>Book detail</h1>
<% @books.each do |book| %>
    <%= image_tag book_path(book.id) do %>
      <%= image_tag book.get_image %>
    <% end %>

      <table>
        <thead>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100,100) %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Edit", edit_book_path(book.id) %></td>
            <td><%= link_to "Destroy", book_path(book.id), method: :delete, "date-confirm" => "Are you sure?" %></td>
          </tr>
        </thead>
      </table>
  </div>
<% end %>